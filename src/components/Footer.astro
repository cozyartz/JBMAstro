---
const navItems = [
  { label: "Home", href: "/" },
  { label: "Mission", href: "/#mission" },
  { label: "Gallery", href: "/gallery" },
  { label: "Contact", href: "/#contact" },
];
---

<header class="bg-white shadow sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 py-6 flex justify-between items-center">
    <a href="/" class="text-2xl font-bold text-gray-900">J&B McKinney Rentals</a>
    <nav class="space-x-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-gray-700 hover:text-black text-base font-medium transition-colors"
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>
