---
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { bannerId } from '../gallery-data.js';

const cloudflareBase = import.meta.env.CLOUDFLARE_BASE;
---

<html lang="en">
  <head>
    <Seo 
      title="J&B McKinney Rentals | Affordable Rentals & Renovations"
      description="Discover beautiful, affordable home rentals by J&B McKinney. Family-owned. Community-focused. See our mission and transformations."
    />
  </head>
  <body class="bg-brand-cream text-brand-charcoal leading-relaxed antialiased">
    <Header />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 py-20 space-y-24">
      <!-- Hero -->
      <section class="text-center space-y-6 animate-fade-in">
        <h1 class="text-4xl sm:text-5xl font-extrabold tracking-tight text-brand-charcoal">
          Affordable Rentals. <span class="text-brand-teal">Beautiful Renovations.</span>
        </h1>
        <p class="text-lg text-brand-charcoal/70 max-w-2xl mx-auto">
          Serving Tuscaloosa with care, craftsmanship, and pride in every home we touch.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/gallery-masonry" class="btn">
            View Transformations
          </a>
          <a href="/about" class="btn-secondary">
            Our Story
          </a>
        </div>
      </section>

      <!-- About -->
      <section class="grid md:grid-cols-2 gap-10 items-center bg-white p-6 md:p-10 rounded-xl shadow-md animate-fade-in delay-100 border border-brand-cream">
        <div>
          <h2 class="text-2xl font-semibold mb-4 text-brand-charcoal">Built by Family, for Families</h2>
          <p class="text-brand-charcoal/80 text-base leading-relaxed mb-4">
            J&B McKinney Rentals is a family-run company rooted in Tuscaloosa, Alabama. Our mission is to provide quality, comfortable homes to tenants while revitalizing the neighborhoods we love.
          </p>
          <p class="text-brand-charcoal/80 text-base leading-relaxed">
            From full renovations to careful property management, we treat every project like it's our own — with care, honesty, and long-term pride.
          </p>
          <a href="/about" class="inline-block mt-4 text-brand-teal hover:text-brand-teal-light font-medium">
            Learn our history <i class="fas fa-arrow-right ml-1"></i>
          </a>
        </div>
        <div>
          <img 
            src={`${cloudflareBase}/${bannerId}/public`} 
            alt="J&B McKinney Rentals banner"
            class="rounded-lg shadow-lg w-full h-auto object-cover animate-zoom-in"
            loading="lazy"
          />
        </div>
      </section>

      <!-- Services -->
      <section class="text-center animate-fade-in delay-200">
        <h3 class="text-2xl font-bold mb-6 text-brand-charcoal">What We Do</h3>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-10 text-left">
          <div class="card">
            <h4 class="font-semibold text-lg mb-2 text-brand-charcoal"><i class="fas fa-tools mr-2 text-brand-teal"></i>Full Home Renovations</h4>
            <p class="text-brand-charcoal/70 text-sm leading-relaxed">We transform neglected houses into safe, stylish homes — top to bottom.</p>
          </div>
          <div class="card">
            <h4 class="font-semibold text-lg mb-2 text-brand-charcoal"><i class="fas fa-home mr-2 text-brand-teal"></i>Rental Property Management</h4>
            <p class="text-brand-charcoal/70 text-sm leading-relaxed">We care for every home as if we live there ourselves — responsive, reliable, and fair.</p>
          </div>
          <div class="card">
            <h4 class="font-semibold text-lg mb-2 text-brand-charcoal"><i class="fas fa-seedling mr-2 text-brand-teal"></i>Community Investment</h4>
            <p class="text-brand-charcoal/70 text-sm leading-relaxed">We're building more than homes. We're helping shape a better Tuscaloosa.</p>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>