---
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GalleryMasonry from '../components/GalleryMasonry.jsx';
import { images } from '../gallery-data.js';

const cloudflareBase = import.meta.env.CLOUDFLARE_BASE;
---

<html lang="en">
  <head>
    <Seo 
      title="Home Transformation Gallery | J&B McKinney Rentals"
      description="Explore renovations and revitalization projects by J&B McKinney Rentals, turning neglected properties into beautiful, welcoming homes."
    />
  </head>

  <body class="bg-white text-gray-900 leading-relaxed">
    <Header />

    <main class="max-w-7xl mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-center mb-6">Home Transformation Gallery</h1>
      <p class="text-center max-w-2xl mx-auto text-lg mb-10">
        From foundation to finishing touches â€” explore how we turn neglected houses into warm, welcoming homes.
      </p>

      <GalleryMasonry client:load cloudflareBase={cloudflareBase} images={images} />
    </main>

    <Footer />
  </body>
</html>
