---
import Seo from '../components/Seo.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { images } from '../gallery-data.js';

const cloudflareBase = "https://imagedelivery.net/PocH-U7ndwJHixntYqkoZw";
---

<html lang="en">
  <head>
    <Seo 
      title="Home Transformation Gallery | J&B McKinney Rentals"
      description="Explore renovations and revitalization projects by J&B McKinney Rentals, turning aging properties into beautiful homes."
    />
  </head>

  <body class="bg-white text-gray-900 leading-relaxed">
    <Header />

    <main class="max-w-7xl mx-auto px-4 py-16">
      <h1 class="text-4xl font-bold text-center mb-6 animate-fade-in">Home Transformation Gallery</h1>
      <p class="text-center max-w-2xl mx-auto text-lg mb-10 animate-fade-in delay-100">
        From foundation to finishing touches â€” explore how we turn neglected houses into warm, welcoming homes. Every project is a story of craftsmanship, care, and renewal.
      </p>

      <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 space-y-4 animate-fade-in delay-200">
        {images.map(({ id, caption }) => (
          <div class="break-inside-avoid overflow-hidden rounded-lg shadow hover:shadow-lg transition duration-300 bg-white">
            <img
              src={`${cloudflareBase}/${id}/public`}
              alt={caption}
              width="600"
              height="400"
              class="w-full object-cover rounded-t-lg hover:scale-105 transition-transform duration-300 ease-in-out"
              loading="lazy"
              decoding="async"
            />
            <p class="p-3 text-sm text-gray-700">{caption}</p>
          </div>
        ))}
      </div>
    </main>

    <Footer />
  </body>
</html>
